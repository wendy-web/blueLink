.textList{
  font-size: 30rpx;
  padding-left: 20rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 80rpx;
  border-top: 10rpx solid e2e0e0;
  border-bottom: 10rpx solid #e2e0e0;
  overflow: hidden;
  padding-top: 10rpx;
}
.textList>view{
  padding-right: 20rpx;
  border-bottom: 1rpx solid #eaeaea;
}
.icon-jinggao{
  color: red;
  margin-right: 10rpx;
}
.nav{
  width: 100%;
}
.textList image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.serBtn{
  width: 100%;
  font-size: 30rpx;
  border-bottom: 1px solid #eaeaea;
}
.serBtn button{
  width: 50%;
  font-size: 30rpx;
}
.serBtn .iconfont{
  margin-right: 10rpx;
}
.serBtn button::after{
  border: none!important;
}
.serBtn button:first-child{
  border-right: 1px solid #eaeaea;
}
.grayText{
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  color: #999;
  border-bottom: 1px solid #eaeaea;
}
.callBg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.48);
  z-index: 33;
}

.callBox{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  text-align: center;
  line-height: 100rpx;
  z-index: 99;
}
.callBox .callNum{
  color: #999;
  border-bottom: 1px solid #eaeaea;
}
.callBox .callBtn{
  border-bottom: 10rpx solid #eaeaea;
} 
.addAnim {
  animation: Addname 0.5s;
}
@keyframes Addname {
  from {
    top: 110%;
  }
  to {
    top: 30%;
  }
}