.hb_center_bg{
  background-size: cover;
  min-height: 269px;
  background-position: 50% 0px;
  background-repeat: no-repeat no-repeat;
  position: relative;
  font-size: 30rpx;
}
.hb_center_yue{
  position: absolute;
  top: 300rpx;
  left: 250rpx;
  text-align: center;
  color: #FE0000;
 
}
.hb_center_num{
  text-align: center;
  font-size: 80rpx;
}
.hb_center_text{
   font-size: 50rpx;

}
.hb_center_hongbao{
  position: absolute;
  /* top: 700rpx; */
  width: 100%;
  padding: 20rpx 40rpx;
  box-sizing: border-box;
  text-align: center;
  font-size: 28rpx;
  bottom: 40%;
}
.hb_center_item{
  border: 1rpx solid rgba(250, 250, 250, 0.5);
  color: #fff;
}
.hb_center_padding{
  margin-top: 10rpx;
  background:#FF9182;
  color: #FE635E;
  font-size: 26rpx;
}
.hb_center_btn{
  position: absolute;
  /* bottom: 300rpx; */
  bottom: 20%;
  text-align: center;
  width: 70%;
  background: #F97E17;
  margin-left: 15%;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 10rpx;
}