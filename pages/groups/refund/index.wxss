/* pages/groups/refund/index.wxss */

.hide {
  display: none;
}

page {
  background: #f6f6f6;
}

.fui-page {
  width: 100%;
  height: 100%;
  display: none;
}

.fui-page.fui-page-current, .fui-page-group.fui-page-current {
  display: block;
  overflow: hidden;
}

.fui-content {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.fui-cell-group {
  margin-top: 0rem;
  background-color: #fff;
  line-height: 1.4;
  font-size: 0.8rem;
  overflow: hidden;
  position: relative;
  display: block;
}

.fui-cell-group .fui-cell {
  position: relative;
  padding: 0.75rem 0.6rem 0.65rem;
  display: flex;
  align-items: center;
  line-height: 1rem;
}

.fui-cell-group .fui-cell:before {
  position: absolute;
  left: 0.5rem;
  right: 0.5rem;
  bottom: -2rpx;
  height: 2rpx;
  border-top: 2rpx solid #ebebeb;
  color: #d9d9d9;
}

.fui-cell-group .fui-cell .fui-cell-label {
  position: relative;
  display: block;
  width: 3.85rem;
  /* padding: 0 0.2rem; */
  font-size: 0.7rem;
  color: #666;
}

.fui-cell-group .fui-cell .fui-cell-info {
  flex: 1;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 0.7rem;
  color: #000;
}

.fui-cell-group .fui-cell .fui-cell-info picker {
  -webkit-appearance: none;
  border: 0;
  outline: 0;
  background-color: transparent;
  width: 100%;
  font-size: inherit;
  height: 1.2rem;
  position: relative;
  z-index: 1;
  padding: 0;
}

.fui-title {
  color: #888;
  font-size: 0.7rem;
  margin: 0.5rem 0;
  padding: 0 0.7rem;
}

.fui-footer {
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  height: 2.45rem;
  background: #fff;
}

.fui-footer .btn {
  margin-left: 0;
  margin-top: 0.15rem;
}

.fui-footer .btn .back {
  top: 0rpx;
}

.btn.btn-danger {
  background: #f55;
  color: #fff;
  border: 2rpx solid #f55;
}

.fui-images {
  list-style: none;
  padding-top: 0.2rem;
}

.fui-images.fui-images-sm .image.image-sm {
  width: 2rem;
  height: 2rem;
  float: left;
  margin-right: 0.3rem;
  margin-bottom: 0.3rem;
  background: no-repeat center center;
  background-size: cover;
  position: relative;
}

.fui-images .image .image-remove {
  position: absolute;
  right: 0;
  top: 0;
  color: white;
  background: rgba(0, 0, 0, 0.5);
  width: 0.75rem;
  height: 0.75rem;
  text-align: center;
  border-bottom-left-radius: 0.25rem;
  font-size: 0.7rem;
}

.fui-header ~ .fui-content.margin {
  top: 2.2rem;
  margin-top: 10rpx;
}

.fui-navbar ~ .fui-content, .fui-content.navbar {
  bottom: 2.5rem;
  padding-bottom: 2.2rem;
}
.fui-according-group {
    margin-top: 0.5rem;
    background-color: #fff;
    line-height: 1.4;
    font-size: 0.8rem;
    overflow: hidden;
    position: relative;
}
.fui-according {
    position: relative;
}
.fui-according-header {
    position: relative;
    display: flex;
    width: 100%;
    padding: 0.6rem 0.6rem 0.5rem;
}
.icon {
    font-family: "icon" !important;
    font-size: 32rpx;
    font-style: normal;
}
.icon-info:before {
    content: "\e66c";
}
.fui-according-header .text {
    flex: 1;
    color: #000;
    font-size: 0.7rem;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.fui-according-header .remark {
    color: #888;
    text-align: right;
    font-size: 0.65rem;
    margin-right: 0.2rem;
}
.fui-according.expanded .remark:after, .fui-according-header:active .remark:after {
    content: " ";
    display: inline-block;
    transform: rotate(135deg);
    height: 0.4rem;
    width: 0.4rem;
    border-width: 2rpx 2rpx 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    position: relative;
    top: -2rpx;
    margin-left: .3em;
}
.fui-according.expanded .fui-according-content {
    display: block;
    height: auto;
    margin-top: 0rem;
}
.fui-according-content {
    position: relative;
    width: 100%;
    height: auto;
    display: none;
    overflow: hidden;
    transform: translate3d(0, 0, 0);
}
.fui-according-content .content-block {
    color: #666;
    box-sizing: border-box;
    font-size: .7rem;
    padding: .5rem .8rem;
}
.fui-cell-title {
    color: #333;
    font-size: 0.75rem;
    padding: 0.5rem 0.7rem;
}
.fui-cell-group .fui-cell:before {
    content: " ";
    position: absolute;
    left: 0.5rem;
    right: 0.5rem;
    bottom: -2rpx;
    height: 2rpx;
    border-top: 2rpx solid #ebebeb;
    color: #D9D9D9;
    transform: scaleY(0.5);
}
.fui-cell-group .fui-cell .fui-cell-label {
    position: relative;
    display: block;
    width: 3.85rem;
    padding: 0 0.2rem;
    font-size: 0.7rem;
    color: #666;
}
.fui-cell-group .fui-cell .fui-cell-info {
    flex: 1;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-size: .7rem;
    color: #000;
}