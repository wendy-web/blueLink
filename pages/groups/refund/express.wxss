.fui-page, .fui-page-group {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: #f3f3f3;
    box-sizing: border-box;
}
.fui-header ~ .fui-content {
    top: 2.2rem;
}
.fui-content {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    overflow: auto;
}
.fui-list-group {
    background-color: #fff;
    margin-top: .5rem;
    position: relative;
}
.fui-list {
    position: relative;
    display: flex;
    padding: .4rem .6rem;
    align-items: center;
    overflow: hidden;
}
.fui-list view {
    color: #666;
}
.fui-list-media {
    display: flex;
    flex-shrink: 0;
    flex-wrap: nowrap;
    box-sizing: border-box;
    align-items: center;
    margin-right: .6rem;
    color: #aaa;
    position: relative;
}
.order-express-page .info-list .fui-list .fui-list-media image {
    height: 3.2rem;
    width: 3.2rem;
}
.fui-list-media .title {
    background: rgba(0,0,0,0.8);
    color: white;
    height: 1rem;
    right: 0;
    left: 0;
    line-height: 1rem;
    font-size: 0.6rem;
    padding: 0 0.15rem;
    position: absolute;
    bottom: 0;
    text-align: center;
    vertical-align: top;
    z-index: 100;
}
.fui-list-inner {
    position: relative;
    width: 100%;
    overflow: hidden;
    box-sizing: border-box;
    flex: 1;
    display: block;
}
.order-express-page .info-list .fui-list .fui-list-inner .state {
    font-size: 0.7rem;
}
.fui-list-inner .title {
    position: relative;
    font-size: 0.7rem;
    color: #000;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    height: 1rem;
    line-height: 1rem;
}
.order-express-page .info-list .fui-list .fui-list-inner .expcom {
    font-size: 0.6rem;
    color: #959595;
}
.content-empty {
    margin-top: 3rem;
}
.content-empty .text {
    font-size: 0.8rem;
    color: #ccc;
    text-align: center;
    padding: 2rem;
}
.icon {
    width: 260rpx;
    height: 260rpx;
    margin-left:32%;
}