/* pages/order/pay/peerpayshare.wxss */

page {
  background: #f3f3f3;
}

.xj-btn-wai {
  display: flex;
  justify-content: center;
}

.xj-bottom-btn {
  width: 95%;
  padding: 20rpx 0;
  background: #f55;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 15rpx;
  margin-top: 30rpx;
}

.xj-header {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
}
.xj-header image{
  border-radius: 50%;
  margin-bottom: 20rpx;
  width: 150rpx;
  height: 150rpx;
}

.xj-bottom {
  font-size: 24rpx;
  margin-bottom: 20rpx;
}

.xj-bottom view {
  color: #999;
}

.xj-bottom text {
  color: #f55;
}

.xj-progress {
  margin-bottom: 30rpx;
}

progress {
  border-radius: 100px;
  overflow: hidden;
}

.view-eno {
  position: fixed;
  display: flex;
  top: 0;
  left: 0;
  z-index: 1001;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
}

.view-eno-bg {
  background: #000;
  opacity: 0.5;
  width: 100%;
  height: 100%;
  z-index: 1000;
  position: fixed;
  top: 0;
  left: 0;
}

.image1 {
  width: 600rpx;
  height: 600rpx;
  position: absolute;
  top: 0;
}

.bottom-oy{
  text-align: center;
}
.btn-oy-sub{
    background: #f7f7f7;
    color: #333;
    border: 1px solid #dfdfdf;
    margin: 20rpx 40rpx;
    border-radius: 20rpx;
    box-sizing: border-box;
    cursor: pointer;
    display: block;
    font-family: inherit;
    font-size: 30rpx;
    height: 80rpx;
    line-height: 76rpx;
    padding: 0 24rpx;
    margin-top: 20rpx;
  }