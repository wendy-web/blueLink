/* pages/order/pay/peerpay.wxss */

page {
  background: #f3f3f3;
}

.xj-header {
  padding: 20rpx;
  font-size: 30rpx;
  color: #656565;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fff;
}

.xj-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  color: #999;
  background: #fff;
  margin-bottom: 20rpx;
}

.xj-content-center {
  width:400rpx;
}

.xj-title {
  color: #333;
      overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.xj-orange {
  color: #f60;
  font-size: 24rpx;
}

.onepeople, .morepeople {
  padding: 80rpx 0;
  background: #fff;
  display: flex;
  justify-content: space-between;
  position: relative;
  width: 100%;
}

.onepeople:after, .morepeople:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 60%;
  right: auto;
  top: auto;
  width: 100%;
  display: block;
  z-index: 5;
  background-color: red;
  height: 4rpx;
}

.onepeople>view {
  color: #666;
  font-size: 30rpx;
  width: 33.3%;
  z-index: 10;
  text-align: center;
  position: relative;
  transition-property: color;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.morepeople>view {
  color: #666;
  font-size: 30rpx;
  width: 25%;
  z-index: 10;
  text-align: center;
  position: relative;
  transition-property: color;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.onepeople>view>text, .morepeople>view>text {
  margin-top: 30rpx;
  color: red;
  font-size: 24rpx;
}

.onepeople>view>label, .morepeople>view>label {
  background: #fff;
  border: solid 2rpx red;
  padding: 10rpx;
  -webkit-border-radius: 50%;
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  line-height: 50rpx;
  font-style: 30rpx;
  color: red;
  position: relative;
  overflow: hidden;
}

.xj-btn {
  font-size: 24rpx;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 30rpx;
}

.xj-textarea-wai {
  display: flex;
  justify-content: center;
  background: #fff;
}

.xj-textarea {
  width: 90%;
  padding: 20rpx;
  font-size: 26rpx;
  background: #f3f3f3;
  height: 150rpx
}
.xj-btn-wai{
  display:flex;
justify-content:center;
background: #fff
}
.xj-bottom-btn {
  width:95%;
padding:20rpx 0;
background:#ff5555;
color:#fff;
display:flex;
justify-content:center;
align-items:center;
border-radius:15rpx;
margin-top:30rpx;
}
.xj-bottom-nav{
  margin-top:30rpx;
  color: #5f5f5f
}
.xj-bottom {
  display:flex;
flex-direction:column;
font-size:30rpx;
align-items:center;
}

.xj-bottom-bom {
  margin-top:30rpx;
  color: #666
}

/* tab */

.view-wine-nav-bg {
  background-color: #ddd;
  display: flex;
  justify-content: center;
  color: #000;
  font-size: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.view-wine-nav text {
  height: 80rpx;
  width: 50%;
  display: inline-block;
  text-align: center;
  line-height: 80rpx;
  box-sizing: border-box;
  font-size: 30rpx;
}

.view-wine-nav {
  background-color: #fff;
  width: 100%;
  height: 80rpx;
}

.hidden {
  display: none;
}

.blue {
  border-bottom: 3px solid #f55;
  color: #f55;
}
