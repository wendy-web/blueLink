<import src="/utils/wxParse/wxParse.wxml" />
<!-- <import src="/utils/Brief/index.wxml" /> -->
<scroll-view class="oy-scroll-box" scroll-y="true" bindscroll="myScroll">
  <block wx:if='{{!show}}'>
    <loading>加载中...</loading>
  </block>
  <block wx:if='{{show}}'>
    <view class='page comment-block'>
      <view class='goods-detail-goods'>
        <view wx:if="{{goods.video}}">
          <video src="{{goods.video}}" controls poster="{{goods.thumbs[0]}}" style="width:100%;{{advVideoHeight?'height:'+advVideoHeight+'px':''}};"></video>
        </view>
        <view wx:else class='goods-advs' style='width:{{advWidth}}px;height:{{advWidth}}px;'>
          <swiper autoplay='{{autoplay}}' circular='{{circular}}' class='index-adcs-sqiper' duration='{{duration}}' indicatorDots='{{indicatorDots}}' interval='{{interval}}' style='width:{{advWidth}}px;height:{{advWidth}}px;'>
            <block wx:for='{{goods.thumbs}}' wx:for-item='item' wx:for-index='idx' wx:key="">
              <swiper-item>
                <image src='{{item}}' class='goodsadvimg' lazy-load='true'></image>
              </swiper-item>
            </block>
          </swiper>
        </view>
        <!-- 秒杀 -->
        <block wx:for="{{seckill.goods}}" wx:key="" wx:if="{{options.id==item.goodsid}}">
          <view class='seckill-big' wx:if="{{seckill&&seckill.length!=0&&seckill!=''}}">
            <view class='seckill-left'>
              <view class='seckill-left-left'>
                <view class='seckill-left-left-money'>
                  <label class='seckill-left-left-fuhao'>￥</label>
                  {{item.price}}
                </view>
                <view class='seckill-left-left-money-right'>
                  <view class='seckill-left-left-money-border'>{{seckill.title}}</view>
                  <text class='seckill-left-left-money-text'>￥{{item.marketprice}}</text>
                </view>
              </view>
              <view class='seckill-left-right'>
                <view class='seckill-left-right-top' wx:if="{{seckill.time.status==0}}">已出售{{item.percent}}%</view>
                <progress wx:if="{{seckill.time.status==0}}" stroke-width="10" backgroundColor="#ef4f4f" activeColor="#efd74f" percent="{{item.percent}}" class='seckill-left-right-pro'></progress>
              </view>
            </view>
            <view class='seckill-right'>
              <view class='seckill-right-top'>
                距{{seckill.time.status==1?"开始":"结束"}}还有
              </view>
              <view class='seckill-right-bottom'>
                <view class='seckill-right-bottom-time'>{{hour>10?"":"0"}}{{hour}}</view>
                <view class='seckill-right-bottom-fuhao'>:</view>
                <view class='seckill-right-bottom-time'>{{minute>10?"":"0"}}{{minute}}</view>
                <view class='seckill-right-bottom-fuhao'>:</view>
                <view class='seckill-right-bottom-time'>{{second>10?"":"0"}}{{second}}</view>
              </view>
            </view>
          </view>
        </block>
        <view class='fui-cell-group fui-detail-group'>
          <view class='fui-cell'>
            <view class='fui-cell-text name'>
              <block wx:if='{{goods.ispresell == 1}}'>
                <text class='fui-tag fui-tag-danger'>预</text>
              </block>
              {{goods.title}}
            </view>
          </view>
          <block wx:if='{{goods.subtitle}}'>
            <view class='fui-cell goods-subtitle'>
              <text class='text-danger'>{{goods.subtitle}}</text>
            </view>
          </block>
          <block wx:if='{{!goods.seckillinfo}}'>
            <view class='fui-cell'>
              <view class='fui-cell-text price'>
                <view class='text-danger' style="float:left;width:70%">￥
                  <block wx:if='{{goods.ispresell > 0 && goods.preselltimeend == 0 || goods.preselltimeend > now}}'>
                    {{goods.presellprice}}
                  </block>
                  <block wx:else>
                    <block wx:if='{{goods.minprice == goods.maxprice}}'>
                      {{goods.minprice}}
                    </block>
                    <block wx:else>
                      {{goods.minprice}} ~ {{goods.maxprice}}
                    </block>
                  </block>
                  <block wx:if='{{goods.isdiscount && goods.isdiscount_time >= now}}'>
                    <text class='original'>￥{{goods.productprice}}</text>
                  </block>
                  <block wx:else>
                    <block wx:if='{{goods.productprice > goods.minprice}}'>
                      <text class='original'>￥{{goods.productprice}}</text>
                    </block>
                  </block>
                </view>
                <view wx:if="{{ver>=314}}" bindtap='showShare' style="float:right;width:30%;text-align:right;">
                  <image src='/static/images/ico-share.png' style='width:40rpx;height:40rpx;' lazy-load='true'></image>
                  <text style="font-size:30rpx;font-weight:normal;line-height:30rpx"> 分享</text>
                </view>
              </view>
            </view>
          </block>
          <block wx:if='{{goods.isdiscount && goods.isdiscount_time >= now}}'>
            <view class='row row-time' id='discount'>
              <view class='fui-labeltext fui-labeltext-danger' id='discount-container'>
                <view class='label'>{{goods.isdiscount_title?goods.isdiscount_title:"促销"}}</view>
                <view class='text'>
                  <block wx:if='{{discountTitle}}'>
                    {{discountTitle}}
                  </block>
                  <block wx:else>
                    <span class='day number text-danger'>{{day}}</span>
                    <span class='time'>天</span>
                    <span class='hour number text-danger'>{{hour}}</span>
                    <span class='time'>小时</span>
                    <span class='minute number text-danger'>{{minute}}</span>
                    <span class='time'>分</span>
                    <span class='second number text-danger'>{{second}}</span>
                    <span class='time'>秒</span>
                  </block>
                </view>
              </view>
            </view>
          </block>
          <block wx:if='{{goods.istime > 0}}'>
            <view class='row row-time'>
              <view class='fui-labeltext fui-labeltext-danger' id='time-container'>
                <view class='label'>{{istimeTitle?istimeTitle:'限时购'}}</view>
                <view class='text'>
                  <block wx:if='{{istime == 0}}'>
                    活动已结束
                  </block>
                  <block wx:else>
                    <span class='day number'>{{day}}</span>
                    <span class='time'>天</span>
                    <span class='hour number'>{{hour}}</span>
                    <span class='time'>小时</span>
                    <span class='minute number'>{{minute}}</span>
                    <span class='time'>分</span>
                    <span class='second number'>{{second}}</span>
                    <span class='time'>秒</span>
                  </block>
                </view>
              </view>
            </view>
          </block>
          <view class='fui-cell'>
            <view class='fui-cell-text flex'>
              <block wx:if='{{dispatchpriceObj == 1}}'>
                <block wx:if='{{goods.type == 1}}'>
                  <text>快递: {{ goods.dispatchprice.min}} ~ {{goods.dispatchprice.max}}</text>
                </block>
              </block>
              <block wx:else>
                <text>快递:<block wx:if='{{goods.dispatchprice == 0}}'>包邮</block><block wx:else>{{goods.dispatchprice}}</block></text>
              </block>
              <block wx:if='{{!goods.seckillinfo || goods.seckillinfo && goods.seckillinfo.status == 1}}'>
                <block wx:if='{{goods.showtotal == 1}}'>
                  <text>库存:  {{goods.total}}</text>
                </block>
                <text>销量:  {{goods.sales}}{{goods.unit}}</text>
              </block>
              <!-- <block wx:if='{{goods.province != "请选择省份" && goods.city != "请选择城市"}}'>
              <text>{{goods.province}}{{goods.city}}</text>
            </block> -->
            </view>
          </view>
        </view>
        <block wx:if='{{goods.ispresell == 1 && (goods.preselltimestart < now && goods.preselltimeend > now || goods.preselltimeend == 0)}}'>
          <view class='fui-cell-group fui-cell-click  fui-sale-group' style='margin-top:0'>
            <view class='fui-list'>
              <view class='fui-list-media'>
                <view class='fui-cell-text'>
                  <span class='fui-label fui-label-safety'>预售</span>
                </view>
              </view>
              <view class='fui-list-inner' style='font-size:26rpx;color:#666;'>
                <block wx:if='{{goods.preselltimeend > 0}}'>
                  结束时间：{{preselltimeend}}
                  <br></br>
                </block>
                预计发货：
                <block wx:if='{{goods.presellsendtype > 0}}'>
                  购买后{{goods.presellsendtime}}天发货
                </block>
                <block wx:else>
                  {{goods.presellsendstatrttime}}
                </block>
              </view>
            </view>
          </view>
        </block>
        <block wx:if='{{goods.seckillinfo ==""}}'>
          <block wx:if='{{goods.buyagain > 0}}'>
            <view style='margin-top:0' class='fui-cell-group  fui-sale-group'>
              <view class='fui-cell'>
                <view class='fui-cell-text' style='white-space: normal;'>此商品二次购买 可享受
                  <span class='text-danger'>{{goods.buyagain}}</span> 折优惠
                  <block wx:if='{{!goods.buyagain_sale}}'>
                    <view>二次购买的时候 不与其他优惠共享</view>
                  </block>
                </view>
              </view>
            </view>
          </block>
          <block wx:if='{{goods.isdiscount == 0 || goods.isdiscount != 0 && goods.isdiscount_time < now}}'>
            <block wx:if='{{!goods.memberprice ==  ""&& goods.memberprice != goods.minprice && !goods.levelbuy == 0}}'>
              <view style='margin-top:0' class='fui-cell-group  fui-sale-group'>
                <view class='fui-cell'>
                  <view class='fui-cell-text' style='white-space: normal;'>您的会员等级是
                    <span class='text-danger'>{{goods.memberprice.levelname}}</span> 可享受
                    <span class='text-danger'>￥{{goods.memberprice.price}}</span> 的价格
                  </view>
                </view>
              </view>
            </block>
          </block>
          <block wx:if='{{goods.citys.length > 0}}'>
            <view class='fui-cell-group fui-cell-click  fui-sale-group' style='margin-top:0' bindtap='cityPicker' data-class='city-picker' id='city-picker' data-tap='active'>
              <view class='fui-cell'>
                <view class='fui-cell-text'>不配送区域:
                  <block wx:for='{{goods.citys}}' wx:for-item='item' wx:for-index='idx' wx:key="">{{item}}</block>
                </view>
                <view class='fui-cell-remark'></view>
              </view>
            </view>
          </block>

          <!--cc_zhong coupon start-->
          <block wx:if='{{goods.coupons && goods.coupons.length>0}}'>
            <view style="font-size:26rpx;margin:15rpx;text-align:center" bindtap="showcoupon">
              <view style="float:left">优惠券</view>
              <block wx:for='{{goods.coupons}}' wx:for-item='item' wx:for-index='index' wx:key="">
                <block wx:if='{{index<4}}'>
                  <view class="small_coupon" style="{{item.settitlecolor==1 && item.titlecolor?'color:'+item.titlecolor:''}}">
                    <block wx:if='{{item.backtype == 0}}'>
                      <text>￥{{item.deduct}}</text>
                    </block>
                    <block wx:elif='{{item.backtype == 1}}'>
                      <text>{{item.discount}}</text>折
                    </block>
                    <block wx:elif='{{item.backtype == 2}}'>
                      <block wx:if='{{item.backcredit && item.backcredit > 0}}'>
                        送
                        <text>{{item.backcredit}}</text>积分
                      </block>
                      <block wx:elif='{{item.backredpack && item.backredpack > 0}}'>
                        送
                        <text>{{item.backredpack}}</text>元红包
                      </block>
                      <block wx:elif='{{item.backmoney && item.backmoney > 0}}'>
                        返
                        <text>{{item.backmoney}}</text>元
                      </block>
                    </block>
                  </view>
                </block>
              </block>
              <view style="float:right;">更多
                <view class='coupon-more'></view>
              </view>
              <view style="clear:both"></view>
            </view>
          </block>
          <!--coupon end-->
          <view class="drawer_screen" bindtap="showcoupon" data-statu="close" wx:if="{{showModalStatus}}"></view>
          <scroll-view scroll-with-animation class="drawer_attr_box" wx:if="{{showModalStatus}}">
            <!--coupon layer drawer-->
            <view class="drawer_content">
              <view class='fui-tab-scroll' bindtap="showcoupon">
                <view style="width:90%;float:left">
                  <text class='item {{cateid == 0?"active":""}}'>领取优惠券</text>
                </view>
                <view style="float:right;width:10%;text-align:right">
                  <image src="/static/images/icon/close_light.png" style="width:40rpx;height:40rpx;" lazy-load='true'></image>
                </view>
              </view>

              <view class='coupon-container coupon-index-list'>
                <block wx:for='{{goods.coupons}}' wx:for-item='item' wx:for-index='index' wx:key="">
                  <view bindtap='getcoupon' class='coupon-index-list-a {{item.isdisa?"disa":item.color}}' data-id='{{item.isdisa?"":item.id}}'>
                    <view class='fui-list coupon-list' style="padding:0;">
                      <i class='coupon-top-i'></i>
                      <i class='coupon-bot-i'></i>
                      <view class='fui-list-inner coupon-index-list-left' style="top:-10px;height:auto">
                        <div class='coupon-index-list-info fui-list noclick' style="padding:0px 20rpx;margin-top:30rpx">
                          <div class='diy-coupon-item'>
                            <view class="tagtitle inner" style="left:0;width:60%;{{item.settitlecolor==1 && item.titlecolor?'color:'+item.titlecolor+';':''}}">
                              <view class="name">
                                <block wx:if="{{item.backpre}}">￥{{item.backmoney}}</block>
                                <block wx:else>
                                  <block wx:if='{{item.backcredit && item.backcredit > 0}}'>
                                    {{item.backcredit}}分
                                  </block>
                                  <block wx:else>
                                    {{item.backmoney}}{{item.backstr}}
                                  </block>
                                </block>
                              </view>
                              <view class="i" style="left: -0.35rem;background:#ffffa6;"></view>
                              <view class="i" style="right: -0.35rem;background: #ffffa6;"></view>
                            </view>
                          </div>
                          <div class='fui-list-inner'>
                            <view class='h3' style="font-weight:normal;font-size:28rpx">{{item.couponname}}</view>
                            <view class='coupon-time'>{{item.timestr}}</view>
                          </div>
                        </div>
                      </view>
                      <view style="padding-right:12rpx">
                        <view class='coupon-list-ling' style="margin-top:0">{{item.isdisa?"已发完":"立即" + item.gettypestr}}</view>
                      </view>
                    </view>
                  </view>
                </block>
              </view>
              <navigator hoverClass='none' url='/pages/sale/coupon/my/index/index' class='fui-dot'>
                <image src='/static/images/icon-white/people.png' lazy-load='true'></image>
              </navigator>
            </view>
          </scroll-view>
          <!--copon layer end-->

          <block wx:if='{{goods.hasServices || goods.labelname}}'>
            <view style='margin-top:0' class='fui-cell-group fui-option-group'>
              <view class='goods-label-demo'>
                <view class='goods-label-list {{!goods.labelstyle.style?"goods-label-style1":""}} {{goods.labelstyle.style == 1?"goods-label-style2":""}} {{goods.labelstyle.style == 2?"goods-label-style3":""}} {{goods.labelstyle.style == 3?"goods-label-style4":""}} {{goods.labelstyle.style == 4?"goods-label-style5":""}}'>
                  <block wx:if='{{goods.cash == 2}}'>
                    <image src='{{icons.labelGreen}}' style='{{goods.labelstyle.style == 0 || goods.labelstyle == ""?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <image src='{{icons.labelRed}}' style='{{goods.labelstyle.style == 1?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <text class='{{goods.labelstyle.style < 2?"cl-3 cl-4 cl-2":""}}'><text>货到付款</text></text>
                  </block>
                  <block wx:if='{{goods.quality == 1}}'>
                    <image src='{{icons.labelGreen}}' style='{{goods.labelstyle.style == 0 || goods.labelstyle == ""?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <image src='{{icons.labelRed}}' style='{{goods.labelstyle.style == 1?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <text class='{{goods.labelstyle.style < 2?"cl-3 cl-4 cl-2":""}}'><text>正品保证</text></text>
                  </block>
                  <block wx:if='{{goods.repair == 1}}'>
                    <image src='{{icons.labelGreen}}' style='{{goods.labelstyle.style == 0 || goods.labelstyle == ""?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <image src='{{icons.labelRed}}' style='{{goods.labelstyle.style == 1?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <text class='{{goods.labelstyle.style < 2?"cl-3 cl-4 cl-2":""}}'><text>保修</text></text>
                  </block>
                  <block wx:if='{{goods.invoice == 1}}'>
                    <image src='{{icons.labelGreen}}' style='{{goods.labelstyle.style == 0 || goods.labelstyle == ""?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <image src='{{icons.labelRed}}' style='{{goods.labelstyle.style == 1?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <text class='{{goods.labelstyle.style < 2?"cl-3 cl-4 cl-2":""}}'><text>发票</text></text>
                  </block>
                  <block wx:if='{{goods.seven == 1}}'>
                    <image src='{{icons.labelGreen}}' style='{{goods.labelstyle.style == 0 || goods.labelstyle == ""?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <image src='{{icons.labelRed}}' style='{{goods.labelstyle.style == 1?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <text class='{{goods.labelstyle.style < 2?"cl-3 cl-4 cl-2":""}}'><text>7天退换</text></text>
                  </block>
                  <block wx:for='{{goods.labelname}}' wx:for-item='item' wx:for-index='idx' wx:key="">
                    <image src='{{icons.labelGreen}}' style='{{goods.labelstyle.style == 0 || goods.labelstyle == ""?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <image src='{{icons.labelRed}}' style='{{goods.labelstyle.style == 1?"":"display:none;"}}width:26rpx;height:26rpx;' lazy-load='true'></image>
                    <text class='{{goods.labelstyle.style < 2?"cl-3 cl-4 cl-2":""}}'><text>{{item}}</text></text>
                  </block>
                  <view style='clear: both;'></view>
                </view>
              </view>
            </view>
          </block>
        </block>
        <block wx:if='{{goods.canbuy}}'>
          <view data-tap='{{active}}' bindtap='selectPicker' class='fui-cell-group fui-cell-click' data-buytype='select' data-class='select-picker'>
            <view class='fui-cell'>
              <view class='fui-cell-text option-selector'>请选择
                <block wx:if='{{goods.spec_titles}}'>
                  {{goods.spec_titles}}等
                </block>
                <block wx:else>
                  数量
                </block>
              </view>
              <view class='fui-cell-remark'></view>
            </view>
          </view>
        </block>
        <block wx:else>
          <view class='fui-cell-group fui-cell-click'>
            <view class='fui-cell'>
              <view class='fui-cell-text'>
                <block wx:if='{{goods.userbuy == 0}}'>
                  您已经超出最大goods.usermaxbuy件购买量
                </block>
                <block wx:elif='{{goods.levelbuy == 0}}'>
                  您当前会员等级没有购买权限
                </block>
                <block wx:elif='{{goods.groupbuy == 0}}'>
                  您所在的用户组没有购买权限
                </block>
                <block wx:elif='{{goods.timebuy ==""}}'>
                  未到开始抢购时间!
                </block>
                <block wx:elif='{{goods.timebuy == 1}}'>
                  抢购时间已经结束!
                </block>
                <block wx:elif='{{goods.total <= 0}}'>
                  商品已经售罄!
                </block>
              </view>
            </view>
          </view>
        </block>
        <view wx:if="{{goods.shopdetail.shopname || goods.shopdetail.logo}}" class='fui-cell-group fui-shop-group'>
          <navigator wx:if="{{goods['merchid']>0}}" bindtap='store' data-id='{{goods["merchid"]}}' open-type="redirect" class='fui-list' url='/pages/merch/mystore/index?merchid={{goods["merchid"]}}'>
            <view class='fui-list-media'>
              <image src='{{goods.shopdetail.logo}}' lazy-load='true'></image>
            </view>
            <view class='fui-list-inner'>
              <view class='title'>{{goods.shopdetail.shopname}}</view>
              <block wx:if='{{goods.shopdetail.description}}'>
                <view class='subtitle'>{{goods.shopdetail.description}}</view>
              </block>
            </view>
          </navigator>
          <button wx:else class='fui-list fu-list' open-type='share'>
            <view class='fui-list-media'>
              <image src='{{goods.shopdetail.logo}}' lazy-load='true'></image>
            </view>
            <view class='fui-list-inner'>
              <view class='title'>{{goods.shopdetail.shopname}}</view>
              <block wx:if='{{goods.shopdetail.description}}'>
                <view class='subtitle'>{{goods.shopdetail.description}}</view>
              </block>
            </view>
          </button>
        </view>
        <block wx:if='{{goods.params.length > 0 || goods.getComments && commentObj.list.length > 0}}'>
          <view class='fui-cell-group'>
            <view class='title'>
              <view class='fui-tab fui-tab-danger' id='tab'>
                <view bindtap='goodsTab' class="item {{tap=='info'?'active':''}}" data-tap='info'>商品详情</view>
                <block wx:if='{{goods.params.length > 0}}'>
                  <view bindtap='goodsTab' class="item {{tap=='para'?'active':''}}" data-tap='para'>参数</view>
                </block>
                <block wx:if='{{goods.getComments && commentObj.list.length > 0}}'>
                  <view bindtap='goodsTab' class="item {{tap=='comment'?'active':''}}" data-tap='comment'>评价</view>
                </block>
              </view>
            </view>
          </view>
        </block>
        <block wx:if='{{goods.params.length == 0 && !goods.getComments && commentObj.list.length > 0}}'>
          <view class='fui-cell-group'>
            <view class='fui-list'>
              <view class='title'>商品详情</view>
            </view>
          </view>
        </block>
        <view class='goods-detail-info active' wx:if="{{tap=='info'&&startScroll==2}}">
          <view class='wxParse'>
            <!-- <block wx:if="{{goods.content_type==1}}"> -->
            <template is='wxParse' data='{{ wxParseData:wxParseData.nodes }}' />
            <!-- </block> -->
            <!-- <block wx:if="{{goods.content_type==2}}">
              <template is='xj_wxparse' data='{{...goods}}' />
            </block> -->

          </view>
        </view>
        <view class='goods-detail-comment acitve' wx:if="{{tap=='comment'}}">
        <!-- <view class='goods-detail-comment'> -->
          <view class='fui-icon-group col-5'>
            <view data-type='1' bindtap='comentTap' class='fui-icon-col' data-level='all'>
